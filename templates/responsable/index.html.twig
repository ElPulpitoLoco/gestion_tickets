{# templates/responsable/index.html.twig #}
{% extends 'admin/dashboard.html.twig' %}

{% block title %}Gestion des Responsables{% endblock %}

{% block body %}
<h1>Liste des responsables</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for responsable in responsables %}
            <tr>
                <td>{{ responsable.id }}</td>
                <td>{{ responsable.nom }}</td>
                <td>
                    <a href="{{ path('responsable_edit', { id: responsable.id }) }}" class="btn btn-warning">Modifier</a>

                    <form action="{{ path('responsable_delete', { id: responsable.id }) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_responsable_' ~ responsable.id) }}">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce responsable ?')">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('responsable_create') }}" class="btn btn-primary">Créer un responsable</a>
{% endblock %}