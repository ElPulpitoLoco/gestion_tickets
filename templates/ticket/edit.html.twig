{% extends 'base.html.twig' %}

{% block title %}Modifier le ticket #{{ ticket.id }}{% endblock %}

{% block body %}
<h1>Modifier le ticket #{{ ticket.id }}</h1>

{{ form_start(form, { 'attr': { 'class': 'form' } }) }}
    <div class="mb-3">
        {{ form_label(form.email, null, { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.description, null, { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.categorie, null, { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(form.categorie, { 'attr': { 'class': 'form-select' } }) }}
        {{ form_errors(form.categorie) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.statut, null, { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(form.statut, { 'attr': { 'class': 'form-select' } }) }}
        {{ form_errors(form.statut) }}
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
{{ form_end(form) }}

<a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn btn-secondary mt-2">Retour</a>

{% endblock %}
